<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="20dp"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:id="@+id/smallprofileImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:src="@drawable/socialdistancered" />


                <TextView
                    android:id="@+id/MyaccountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/smallprofileImg"
                    android:text="Attention,quelqu'un était trés proche"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/HistoryInfoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/MyaccountTV"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/smallprofileImg"
                    android:alpha="0.4"
                    android:text="10:02 PM, 21 May 2022, Location: Adress 12a xyz"
                    android:textColor="@color/black"
                    android:textSize="11sp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</RelativeLayout>